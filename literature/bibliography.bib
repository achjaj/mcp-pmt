@article{shikaliev,
title = {Saturation model for secondary electron multiplier detectors},
journal = {Nuclear Instruments and Methods in Physics Research Section A: Accelerators, Spectrometers, Detectors and Associated Equipment},
volume = {420},
number = {1},
pages = {202-212},
year = {1999},
issn = {0168-9002},
