@article{bateman,
title = {A new photomultiplier tube utilising channel plate electron multipliers as the gain producing elements},
journal = {Nuclear Instruments and Methods},
volume = {137},
number = {1},
pages = {61-70},
year = {1976},
issn = {0029-554X},
doi = {https://doi.org/10.1016/0029-554X(76)90249-4},
url = {https://www.sciencedirect.com/science/article/pii/0029554X76902494},
author = {J.E. Bateman and R.J. Apsimon and F.E. Barlow},
abstract = {A survey of the properties of a new type of photomultiplier tube is presented. The device is a planar structure in which two cascaded channel plate electron multipliers (CPEM) produce charge gain factors of greater than 107 with a transit time of 1 ns. The single electron pulse rise time and transit time spread figures are 1 ns and 2.5 ns fwhm. The tube has shown its ability to operate satisfactorily in magnetic fields of 1 T without magnetic screening. Saturation of the tube occurs at a peak pulse current of 40 mA with plastic scintillator pulses. However the high plate impedances cause serious rate limitations with high output pulses.}
}

@article{gys,
title = {Micro-channel plates and vacuum detectors},
